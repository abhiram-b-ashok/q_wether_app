<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.side_nav_fragments.disclaimer.DisclaimerFragment">

            <TextView
                android:id="@+id/header_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/effra_trail_bold"
                android:paddingBottom="20dp"
                android:text="About US"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/weather_news_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/location_bottom_sheet_shape"
                android:paddingHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_label">

                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/effra_trail_medium"
                    android:text="Civil Aviation Authority"
                    android:textColor="#3BA5F8"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_sub_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/effra_trail_regular"
                    android:text="QCAA Establishment"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_heading" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#2B2758"
                    android:fontFamily="@font/effra_trail_light"
                    android:text="The Civil Aviation Authority endeavour, through its APP to enable its clients and visitors obtain, share, and use the materials uploaded to the APP for personal and non-commercial purposes, and as per the terms of usage of the app."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sub_heading" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/ca_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/notice_frames"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/qatar_king" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/effra_trail_regular"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:text="Civil Aviation Authority"
                            android:textColor="#123456"
                            android:textSize="16sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_vm_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/effra_trail_regular"
                    android:text="Vision and Mission"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ca_layout" />


                <TextView
                    android:id="@+id/tv_vm_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/effra_trail_light"
                    android:text="The Civil Aviation Authority endeavour, through its APP to enable its clients and visitors obtain, share, and use the materials uploaded to the APP for personal and non-commercial purposes, and as per the terms of usage of the app. "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="#2B2758"
                    app:layout_constraintTop_toBottomOf="@id/tv_vm_heading" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/tv_vm_1"
                    android:textColor="#2B2758"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/effra_trail_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_vm_description"/>

                <TextView
                    android:id="@+id/tv_vm_description1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:textColor="#2B2758"
                    android:fontFamily="@font/effra_trail_light"
                    android:text="The Civil Aviation Authority endeavour, through its APP to enable its clients and visitors obtain, share, and use the materials uploaded to the APP for personal and non-commercial purposes, and as per the terms of usage of the app. "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_vm_1"
                    app:layout_constraintTop_toBottomOf="@id/tv_vm_description" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/tv_vm_2"
                    android:layout_marginTop="15dp"
                    android:textColor="#2B2758"
                    android:fontFamily="@font/effra_trail_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_vm_description1"/>
                <TextView
                    android:id="@+id/tv_vm_description2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:textColor="#2B2758"
                    android:fontFamily="@font/effra_trail_light"
                    android:text="The Civil Aviation Authority endeavour, through its APP to enable its clients and visitors obtain, share, and use the materials uploaded to the APP for personal and non-commercial purposes, and as per the terms of usage of the app. "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_vm_2"
                    app:layout_constraintTop_toBottomOf="@id/tv_vm_description1" />



            </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


